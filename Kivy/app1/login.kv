Screen:
    
    
    MDCard:
        orientation: "vertical"
        id: login_card
        padding: 25
        spacing: "25dp"
        size_hint: None, None
        size: "600dp", "500dp"
        pos_hint: {"center_x": .5, "center_y": .5}
        
        
        MDBoxLayout:
            orientation: "vertical"
            
            Image:
                source: "usr.png"
                allow_stretch: True
            
            MDTextField:
                id: "user_login"
                hint_text: "Usuario"
                icon_right: "account"
                font_size: 12
                multiline: False
                
                
            MDTextField:
                id: "pass_login"
                hint_text: "Contraseña"
                icon_right: "eye-off"
                font_size: 12
                multiline: False
                password: True
                

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "50dp"
                
                MDRaisedButton:
                    id: "bt_login"
                    text: "Iniciar sesión"
                    md_bg_color: 0.3, 0.3, 0.3, 1
                    on_press: app.login(user_login.text, pass_login.text)

                MDRaisedButton:
                    id: "bt_clear"
                    text: "Vaciar campos"
                    md_bg_color: 0.3, 0.3, 0.3, 1
                    on_press: app.clear()
                MDLabel:
                    id: "login_status"
                    
                
                